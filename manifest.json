{
    "name": "タンパク Markdown",
    "version": "0.1",
    "description": "Markdown で書かれたタンパクの記事を Markdown 化するためのプラグインです",
    "permissions" : [
        "tabs",
        "http://tanpaku.grouptube.jp/"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background_page" : "background.html",
    "browser_action": {
        "default_icon": "icon19.png",
        "default_title": "タンパク Markdown",
        "popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["http://tanpaku.grouptube.jp/*"],
      "js": ["jquery-1.6.1.min.js", "showdown.js", "content.js"]
    }]
}
